  <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

       <LinearLayout
           android:layout_width="wrap_content"
           android:id="@+id/gardenLayout"
           android:orientation="vertical"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/gardenNameText"/>
           <LinearLayout
               android:id="@+id/locationLayout"
               android:layout_width="wrap_content"
               android:orientation="horizontal"
               android:layout_height="wrap_content">
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/gps_icon_30"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/locationText"/>
           </LinearLayout>

           <LinearLayout
               android:id="@+id/TempLayout"
               android:layout_width="wrap_content"
               android:orientation="horizontal"
               android:layout_height="wrap_content">
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/temp_30"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/temperatureText"/>
           </LinearLayout>
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/garden_example"/>
       </LinearLayout>

          <LinearLayout
              android:layout_width="wrap_content"
              android:id="@+id/patchLayout"
              android:orientation="vertical"
              android:layout_height="wrap_content">
              <LinearLayout
                  android:id="@+id/humidityLayout"
                  android:layout_width="wrap_content"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/humidityLabel"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/humidityText"/>
              </LinearLayout>

              <LinearLayout
                  android:id="@+id/statusLayout"
                  android:layout_width="wrap_content"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/statusLabel"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/statusText"/>
              </LinearLayout>


              <LinearLayout
                  android:id="@+id/patchcodeLayout"
                  android:layout_width="wrap_content"
                  android:orientation="horizontal"
                  android:background="@drawable/sprinkler_background"
                  android:layout_height="wrap_content">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/patchcodeLabel"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/patchcodeText"/>
              </LinearLayout>

              <LinearLayout
                  android:id="@+id/lastcheckLayout"
                  android:layout_width="wrap_content"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/lastcheckLabel"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/lastcheckText"/>
              </LinearLayout>
              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/activateButonLabel"
                  android:id="@+id/activateSprinkler"/>
          </LinearLayout>

      </LinearLayout>
  </FrameLayout>
